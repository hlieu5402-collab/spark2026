{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus 数据源",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "9.3.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "ReadyState 四分支与 RetryAfter 退避监控，配套 docs/runbook/retry-after.md。",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": "${DS_PROMETHEUS}",
      "description": "ReadyState Busy/RetryAfter/Budget Exhausted 的占比走势。用于快速识别服务退避或预算耗尽趋势。",
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "legend": {
          "calcs": [],
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "sum by (ready_state) (increase(spark_request_ready_state_total{service_name=~\"$service_name\", route_id=~\"$route_id\", operation=~\"$operation\", ready_state!=\"ready\"}[5m])) / clamp_min(sum(increase(spark_request_ready_state_total{service_name=~\"$service_name\", route_id=~\"$route_id\", operation=~\"$operation\"}[5m])), 1)",
          "interval": "",
          "legendFormat": "{{ready_state}}",
          "refId": "A"
        }
      ],
      "title": "ReadyState 占比（5m increase）",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "description": "RetryAfter 事件的滑窗次数，帮助量化退避频率。",
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 2,
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "targets": [
        {
          "expr": "sum by (ready_detail) (increase(spark_request_ready_state_total{service_name=~\"$service_name\", route_id=~\"$route_id\", operation=~\"$operation\", ready_state=\"retry_after\"}[5m]))",
          "legendFormat": "{{ready_detail}}",
          "refId": "A"
        }
      ],
      "title": "RetryAfter ReadyState 次数（5m increase）",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "description": "RetryAfter 建议等待时长（ms）直方图，支持定位退避窗口是否需要扩展。",
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "id": 3,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le) (rate(spark_request_retry_after_delay_ms_bucket{service_name=~\"$service_name\", route_id=~\"$route_id\", operation=~\"$operation\"}[5m])))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.9, sum by (le) (rate(spark_request_retry_after_delay_ms_bucket{service_name=~\"$service_name\", route_id=~\"$route_id\", operation=~\"$operation\"}[5m])))",
          "legendFormat": "P90",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(spark_request_retry_after_delay_ms_bucket{service_name=~\"$service_name\", route_id=~\"$route_id\", operation=~\"$operation\"}[5m])))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "title": "RetryAfter 建议等待时长分布",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "description": "RetryAfter 事件速率与告警阈值对比，用于验证 Prometheus 告警是否应该触发。",
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "id": 4,
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "targets": [
        {
          "expr": "sum(rate(spark_request_retry_after_total{service_name=~\"$service_name\", route_id=~\"$route_id\", operation=~\"$operation\"}[5m]))",
          "legendFormat": "RetryAfter rate",
          "refId": "A"
        },
        {
          "expr": "0.0167",
          "legendFormat": "Threshold (>=5 次/5m)",
          "refId": "B"
        }
      ],
      "title": "RetryAfter 速率与阈值",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 37,
  "style": "dark",
  "tags": [
    "spark",
    "ready-state",
    "retry-after"
  ],
  "templating": {
    "list": [
      {
        "name": "service_name",
        "label": "Service",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "definition": "label_values(spark_request_ready_state_total, service_name)",
        "refresh": 2,
        "includeAll": true,
        "multi": false,
        "query": "label_values(spark_request_ready_state_total, service_name)",
        "current": {
          "selected": false,
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "route_id",
        "label": "Route",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "definition": "label_values(spark_request_ready_state_total{service_name=~\"$service_name\"}, route_id)",
        "refresh": 2,
        "includeAll": true,
        "multi": false,
        "query": "label_values(spark_request_ready_state_total{service_name=~\"$service_name\"}, route_id)",
        "current": {
          "selected": false,
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "operation",
        "label": "Operation",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "definition": "label_values(spark_request_ready_state_total{service_name=~\"$service_name\", route_id=~\"$route_id\"}, operation)",
        "refresh": 2,
        "includeAll": true,
        "multi": false,
        "query": "label_values(spark_request_ready_state_total{service_name=~\"$service_name\", route_id=~\"$route_id\"}, operation)",
        "current": {
          "selected": false,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "time": {
    "from": "now-3h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "Spark ReadyState 与 RetryAfter",
  "uid": "spark-ready-state-retry-after",
  "version": 1,
  "weekStart": ""
}
